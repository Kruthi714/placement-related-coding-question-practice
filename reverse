import java.util.*;
class Main {
    public static void main(String[] args) {
        String str="i love code";
        StringBuilder b=new StringBuilder("");
        for(int i=str.length()-1;i>=0;i--)
        {
            char ch=str.charAt(i);
            b.append(ch);
        }
        System.out.println(b);
//or
StringBuilder b=new StringBuilder(str);
 b.reverse();
 System.out.println(b);
